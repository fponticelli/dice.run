*
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
  box-sizing: border-box

body
  overflow: hidden
  margin: 0
  background-color: #f6f6f6

.content
  // padding 20px 120px 0
  position: absolute
  display: flex
  flex-direction: column
  height: 100%
  max-width: 100%

.body
  overflow: auto
  padding: 1rem 4rem

.barchart
  display: flex
  width: 100%
  margin: 0


.barchart
  border-left: 1px dashed #bbb
  border-right: 1px dashed #bbb
  &:first-child
    border-right: none
  &:last-child
    border-left: none

.bar-container.selected .text
  color: #000
  font-weight: bold
  // background-color: rgba(255,255,255,0.6)
  padding: 0 0.2rem
  text-shadow:
  -1px -1px 0 rgba(255,255,255,0.6), 0 -1px 0 rgba(255,255,255,0.6), 1px -1px 0 rgba(255,255,255,0.6), -1px 0 0 rgba(255,255,255,0.6), 1px 0 0 rgba(255,255,255,0.6), -1px 1px 0 rgba(255,255,255,0.6), 0 1px 0 rgba(255,255,255,0.6), 1px 1px 0 rgba(255,255,255,0.6)

.bar-container.selected
  .bar
    background-image: linear-gradient(to top, #a21 0%, #c66 100%)

.bar
  background-color: #e33
  transition: all 2s, background-color 0.2s
  min-width: 1px
  background-image: linear-gradient(to top, #fee 0%, #e33 100%)

.split
  display: flex

.roll-details
  display: flex
  overflow-x: auto
  overflow-y: hidden
  // max-width: 100%
  margin-left: 24px

  > *
    margin: 0 auto
    padding-right: 100px

.bar-container
  display: flex
  flex-direction: column-reverse
  text-align: center
  flex-grow: 10

.label, .percent
  position: relative
  height: 1rem

.label .text, .percent .text
  position: absolute
  white-space: nowrap
  font-size: 1rem
  text-align: center
  margin: 0 auto
  color: transparent
  transform: translateX(-50%)
  left: 50%

.percent .text
  font-size: 0.8rem
  bottom: 0

.expression-input
  font-size: 2.4rem
  width: 100%
  text-align: center
  border: none

.details > .die
  font-size: 0.6rem
  margin: 0
  white-space: nowrap

.roll-result
  a
    font-size: 3rem
    font-weight: bold
    width: 6rem
    height: 6rem
    display: inline-block
    position: relative
    line-height: 6rem
    background-color: #eaeaea
    background-image: linear-gradient(top, #f6f6f6, #eaeaea)
    border-radius: 4.5rem
    box-shadow: 0 3px 3px rgba(0, 0, 0, .25), 0 6px 9px rgba(0, 0, 0, .1)
    text-decoration: none
    color: #000
    &::after
      content: ''
      position: absolute
      z-index: 1
      top: 2px
      right: 2px
      bottom: 2px
      left: 2px
      background: radial-gradient(ellipse at center, rgba(0,0,0,0.0) 0%, rgba(0,0,0,0.0) 50%, rgba(150,120,180,0.4) 100%), radial-gradient(ellipse at 25% 25%, rgba(245,245,255,0.8) 0%, rgba(245,245,255,0.8) 3%, rgba(150,160,200,0.25) 8%, rgba(200,160,150,0.0) 100%)
      border-radius: 8rem
    &:focus
      outline: none
      &::before
        background-color: #eaeaff

.roll-box
  text-align: center
  justify-content: center
  display: flex
  padding: 1rem 0 0.5rem

.pair
  display: flex
  flex-direction: column

.result
  border-bottom: 1px solid #ccc
  font-size: 1rem

.details

.binop
  display: flex
  flex-direction: row

.left, .right
  flex: 1

.op
  flex: 0.1

.dice-set
  display: flex

.dice-set > *
  flex: 1

.dice-set > .comma
  flex: 0.2
  padding-top: 10px

.die > *
  display: inline-block

.discard .result
  color: #000
  position: relative

.roll-details .discard .result:before
  content: ""
  display: block
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 20px
  margin: 0 auto
  text-align: center
  z-index: -1
  background: linear-gradient(135deg, rgba(255,255,255,0) 48.75%, rgba(255,0,0,0.8) 48.8%, rgba(255,0,0,0.8) 51.2%,  rgba(255,255,255,0) 51.25%), linear-gradient(45deg, rgba(255,255,255,0) 48.75%, rgba(255,0,0,0.8) 48.8%, rgba(255,0,0,0.8) 51.2%,  rgba(255,255,255,0) 51.25%)

.header
  box-shadow: 0px 4px 12px rgba(0,0,0,0.1)
  border-bottom: 1px solid #ddd
  z-index: 1
  background-color: #fff

.keep .result
  color: #333

.normal .result
  color: #666

.die-icon
  font-size: 36px
  position: absolute
.die-container
  width: 36px
  height: 36px
  position: relative

.discard .die-icon
  color: #ccc

.description
  code
    padding: 0.1rem 0.25rem
    background-color: #f3f3f3
    font-family: monospace
    font-weight: bold
  a
    text-decoration: none
    color: #309
  h1
    margin: 0.0rem
    font-size: 1rem
  p
    margin: 0.5rem
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

.probabilities-container
  overflow-x: auto
  overflow-y: hidden
  padding: 0 20px

.probabilities
  display: flex
  justify-content: space-between
  padding: 0

.probabilities-labels
  display: flex
  justify-content: space-around
  .label
    text-align: center
    color: #999
    font-size: 0.8rem

.roll-seed
  color: #999
  margin-top: 1rem
  font-size: 0.8rem

.text-editor
  width: 100%
  padding: 0 4px
  background-color: #f6f6f6
  border-bottom: 1px dashed #bbb
  display: inline-block

.text-editor:focus
  outline: none

.stats
  text-align: right
  font-size: 0.8rem
  color: #999
  margin-bottom: -0.5rem
  font-style: italic

@media screen and (max-width: 960px)
  // .content
  //   padding 20px 60px 0
  .roll-result
    a
      font-size: 2rem
      width: 4rem
      height: 4rem
      line-height: 4rem
      &::before
        top: -8px
        right: -8px
        bottom: -8px
        left: -8px
  .expression-input
    font-size: 1.8rem
  .result
    font-size: 0.8rem
  .die-icon
    font-size: 30px
  .die-container
    width: 30px
    height: 30px
  .dice-set > .comma
    padding-top: 8px
  .body
    padding: 1rem 2rem
  .roll-seed
    margin-top: 0.5rem
  .roll-box
    padding: 0.5rem 0

@media screen and (max-width: 720px)
  // .content
  //   padding 20px 20px 0
  .roll-result
    a
      font-size: 1.6rem
      width: 3rem
      height: 3rem
      line-height: 3rem
      &::before
        top: -6px
        right: -6px
        bottom: -6px
        left: -6px
  .expression-input
    font-size: 1.5rem
  .result
    font-size: 0.6rem
  .die-icon
    font-size: 24px
  .die-contaier
    width: 24px
    height: 24px
  .dice-set > .comma
    padding-top: 4px
  .body
    padding: 1rem 1rem

.ribbon
  position: absolute
  top: -45px
  right: -125px
  padding: 1px 0
  transform-origin: top left
  transform: rotate(45deg)
  background-color: #0076ea
  background-image: linear-gradient(0, rgba(0, 0, 0, 0.2), transparent)
  box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.2)
  line-height: 0.8rem
  z-index: 1

  a
    display: inline-block
    width: 250px
    font-family: 'Helvetica Neue'
    color: #fff
    font-size: 0.8em
    letter-spacing: 0.06em
    text-shadow: 0 -1px #777
    text-decoration: none
    text-align: center
    border-top: 1px dotted #ffc284
    border-bottom: 1px dotted #ffa951
    padding: 0 0 0.2rem 0

    .prefix
      font-size: 0.6rem
      color: #ccc

.error
  text-align: center
  padding: 0.5rem  1rem
  // margin: 0 0.5rem
  border-left: 2rem solid #a20
  line-height: 1.5rem

  .label
    color: #999

  .expected
  .got
    padding: 0 0.5rem

  .expected
    font-family: monospace
    background-color: #eee

  .got
    background-color: #e99

.validation-prefix
  color: #999
.validation-message
  font-style: italic


.roll
  animation-iteration-count: 1
  transform-origin: 50% 50%
  animation-fill-mode:forwards

.roll1
  animation: roll ease-out 0.6s

.roll2
  animation: roll ease-out 0.8s

.roll3
  animation: roll ease-out 1s

.roll4
  animation: roll ease-out 1.2s

.roll5
  animation: roll ease-out 1.6s

@keyframes roll
  0%   { transform: rotate(0deg) }
  100% { transform: rotate(720deg) }
